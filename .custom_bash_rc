# aliases
## ls
export LS_OPTIONS='--color=auto'
alias ll="ls $LS_OPTIONS -larth"

## Kube
export KD="--dry-run=client"
export KDR="$KD -o yaml"
export KDRJ="$KD -o json"
export k="kubectl"
alias kc="$K create"
alias kg="$K get"
